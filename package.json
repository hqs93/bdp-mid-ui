{
  "name": "bdp-mid-ui",
  "version": "1.0.33",
  "description": "中台组件库",
  "scripts": {
    "docs:dev": "pnpm run -C docs docs:dev",
    "docs:build": "pnpm run -C docs docs:build && pnpm run -C packages/ant-design-vue-v2.2.0 docs:build",
    "build": "pnpm run build:shared && pnpm run build:antdv2.2.0 && pnpm run build:antdv && pnpm run build:hooks",
    "build:hooks": "pnpm run -C packages/hooks build",
    "build:shared": "pnpm run -C packages/shared build",
    "build:antdv": "pnpm run -C packages/ant-design-vue build",
    "build:antdv2.2.0": "pnpm run -C packages/ant-design-vue-v2.2.0 build",
    "release": "node scripts/release.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": ["bdp-mid-ui"],
  "workspaces": [
    "packages/*/dist/*"
  ],
  "exports": {
    "./ant-design-vue": {
      "import": "./packages/bdp-ant-design-vue/dist/bdp-ant-design-vue.mjs",
      "require": "./packages/bdp-ant-design-vue/dist/bdp-ant-design-vue.umd.js"
    },
    "./ant-design-vue-v2.2.0": {
      "import": "./packages/ant-design-vue-v2.2.0/dist/ant-design-vue-v2.2.0.mjs",
      "require": "./packages/ant-design-vue-v2.2.0/dist/ant-design-vue-v2.2.0.umd.js"
    },
    "./hooks": {
      "import": "./packages/hooks/dist/hooks.mjs",
      "require": "./packages/hooks/dist/hooks.umd.js"
    },
    "./shared": {
      "import": "./packages/shared/dist/shared.mjs",
      "require": "./packages/shared/dist/shared.umd.js"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^18.0.3",
    "chalk": "^4.1.2",
    "execa": "^5.1.0",
    "fs-extra": "^10.1.0",
    "vite": "^3.1.2"
  }
}
